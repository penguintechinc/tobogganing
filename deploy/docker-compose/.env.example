# SASEWaddle Docker Compose Environment Variables
# Copy this file to .env and modify the values for your deployment

# Version/Tag
VERSION=latest

# Basic Configuration
COMPOSE_PROJECT_NAME=sasewaddle
ENVIRONMENT=production

# Ports
MANAGER_PORT=8000
HEADEND_PROXY_PORT=8080
WIREGUARD_PORT=51820
HTTP_PORT=80
HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Authentication
REDIS_PASSWORD=your-secure-redis-password-here
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# Cluster Configuration
CLUSTER_ID=production
NODE_ID=headend-prod-01

# Logging
LOG_LEVEL=info

# Traffic Mirroring (optional)
TRAFFIC_MIRROR_ENABLED=false
TRAFFIC_MIRROR_DESTINATIONS=
TRAFFIC_MIRROR_PROTOCOL=VXLAN
TRAFFIC_MIRROR_SAMPLE_RATE=100

# Monitoring (optional)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# SSL/TLS Configuration (for nginx proxy)
SSL_CERT_PATH=./config/nginx/ssl/cert.pem
SSL_KEY_PATH=./config/nginx/ssl/key.pem

# Domain Configuration
MANAGER_DOMAIN=manager.yourdomain.com
HEADEND_DOMAIN=headend.yourdomain.com

# Database Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Network Configuration
WIREGUARD_NETWORK=10.200.0.0/16
INTERNAL_NETWORK=172.20.0.0/16
EXTERNAL_NETWORK=172.21.0.0/16

# Resource Limits
MANAGER_MEMORY_LIMIT=1g
HEADEND_MEMORY_LIMIT=2g
REDIS_MEMORY_LIMIT=512m

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=60s