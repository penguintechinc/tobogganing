{
  "name": "sasewaddle-mobile",
  "version": "1.0.0",
  "description": "SASEWaddle Mobile Client - React Native app for WireGuard VPN management",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace SASEWaddleMobile.xcworkspace -scheme SASEWaddleMobile -configuration Release archive",
    "clean": "react-native clean",
    "pod-install": "cd ios && pod install"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.6",
